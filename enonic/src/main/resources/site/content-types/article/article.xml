<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name i18n="article.displayName">Article</display-name>
  <description i18n="article.description">Article - can be used to create an article</description>
  <super-type>base:structured</super-type>

  <form>
    <input name="title" type="TextLine">
      <label i18n="article.label.title">Title</label>
      <occurrences minimum="1" maximum="1"/>
    </input>

    <input name="body" type="TextArea">
      <label i18n="article.label.body">Body</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
  </form>
</content-type>